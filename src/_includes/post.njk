---
layout: base.njk
css: blog-post.css
---
<article class="blog-post">
  <div class="post-container">  <!-- Changed class name -->
    <header class="post-header">
      <h1 class="post-title">{{ title }}</h1>
      <div class="post-meta">
        <time datetime="{{ postDate  }}">{{ date | postDate  }}</time>
      </div>
      {% if image %}
      <img src="{{ image }}" alt="{{ title }}" class="post-featured-image">
      {% endif %}
    </header>

    <div class="post-content">
      {{ content | safe }}
    </div>
  </div>
</article>